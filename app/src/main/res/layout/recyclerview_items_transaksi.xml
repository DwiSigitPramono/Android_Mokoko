<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:contentPadding="5dp"
    card_view:cardMaxElevation="5dp"
    android:layout_marginTop="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginBottom="1dp"
    android:layout_marginRight="1dp"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/rlItem"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvJenisTransaksi"
                    android:textColor="@color/colorPrimary"
                    android:text="Kirim"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorIcon"
                    android:text="-Rp. 15.000"
                    android:textSize="18sp"
                    android:id="@+id/tvNominal"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvIdTrans"
                android:text="#L"
                android:textSize="16sp"
                android:textColor="@color/colorSc2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvPihak"
                android:text="Toko"
                android:textSize="16sp"
                android:textColor="@color/colorHitam"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvPihakId"
                android:text="TKO00001"
                android:textSize="14sp"
                android:textColor="@color/colorHitam"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvTime"
                android:text="07 Maret 2018, 19:08"
                android:textSize="12sp"
                android:textColor="@color/colorSc2"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>